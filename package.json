{
  "name": "clava",
  "version": "0.0.1",
  "description": "A C/C++ source-to-source compiler written in Typescript",
  "main": "index.js",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "bin": {
    "clava-js": "./dist/index.js"
  },
  "scripts": {
    "run": "node dist/index.js",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "eslint .",
    "test": "npx mocha --enable-source-maps --recursive",
    "test:watch": "npx mocha --enable-source-maps --recursive --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lm-sousa/Clava-JS.git"
  },
  "keywords": [
    "C",
    "C++",
    "source-to-source",
    "compiler",
    "metaprogramming"
  ],
  "author": "L. Sousa",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/lm-sousa/Clava-JS/issues"
  },
  "homepage": "https://github.com/lm-sousa/Clava-JS#readme",
  "dependencies": {
    "chokidar": "^3.5.3",
    "debug": "^4.3.4",
    "java": "^0.13.0",
    "supports-color": "^9.3.1",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/chai-as-promised": "^7.1.5",
    "@types/debug": "^4.1.7",
    "@types/java": "^0.9.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.15.3",
    "@types/sinon": "^10.0.15",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-plugin-mocha": "^9.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "mocha": "^9.1.2",
    "sinon": "^15.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2"
  }
}
